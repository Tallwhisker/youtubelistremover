{
  "manifest_version": 2,
  "name": "Youtube List Remover",
  "version": "1.0",

  "description": "Adds a button that removes the youtube playlists and refreshes the tab of your current video.",
  "icons": {
    "48": "icons/listremover-48.png"
  },
  "homepage_url": "https://github.com/Tallwhisker/youtubelistremover",

  "browser_specific_settings": {
    "gecko": {
      "id": "164023995+Tallwhisker@users.noreply.github.com"
    }
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/listremover-32.png",
    "default_title": "List Remover"
  }
}
