{
  "manifest_version": 2,
  "name": "Youtube List Remover",
  "version": "1.0",

  "description": "Trims the youtube URL to remove the watchlist parameter and updates the current tab.",
  "icons": {
    "48": "icons/listremover-48.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "listremover@idonthaveadomain.com"
    }
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/listremover-32.png",
    "default_title": "List Remover"
  }
}
